{
  "name": "react-complete-todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.27.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "npx concurrently \"npm run start:client\" \"npm run start:api\"",
    "start:api": "npx json-server -w ./src/db/db.json -p 3003",
    "start:client": "npx cross-env PORT=3001 react-scripts start",
    "build": "npx cross-env PORT=3001 react-scripts build",
    "test": "npx cross-env PORT=3001 react-scripts test",
    "eject": "npx cross-env PORT=3001 react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "json-server": "^0.17.0"
  }
}
